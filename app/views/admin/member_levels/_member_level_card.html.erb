<div class="card w-100 mb-2">
  <div class="card-body w-100 d-flex flex-row justify-content-between">
    <div class="d-flex flex-column">
      <span>Level: <%= member_level.level %></span>
      <span>Required members: <%= member_level.required_members %></span>
      <span>Coins: <%= member_level.coins %></span>
    </div>

    <div class="d-flex h-100 flex-row">
      <%= link_to 'Edit', edit_member_level_path(member_level), class: 'btn btn-sm btn-primary me-2' %>
      <%= button_to 'Delete', member_level_path(member_level), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
    </div>
  </div>
</div>