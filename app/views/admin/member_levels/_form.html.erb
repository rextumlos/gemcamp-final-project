<%= form_with model: member_level, url: url, method: method, data: { controller: '', turbo: 'false' }, class: 'form mt-2' do |f| %>

  <% if member_level.errors.any? %>
    <ul>
      <% member_level.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-group w-100 mb-2">
    <%= f.label :level, class: 'form-label' %>
    <%= f.text_field :level, class: 'form-control', placeholder: 'Set level' %>
  </div>

  <div class="form-group w-100 mb-2">
    <%= f.label :required_members, class: 'form-label' %>
    <%= f.text_field :required_members, class: 'form-control', placeholder: 'Set required members' %>
  </div>

  <div class="form-group w-100 mb-2">
    <%= f.label :coins, class: 'form-label' %>
    <%= f.text_field :coins, class: 'form-control', placeholder: 'Set reward coins' %>
  </div>

  <%= f.submit 'Save', class: 'btn btn-success w-100' %>
<% end %>