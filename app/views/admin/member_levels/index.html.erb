<div class="vh-100 vw-100">
  <%= render partial: 'admin/shared/top_nav' %>

  <div class="d-flex flex-row h-100 w-100">
    <%= render partial: 'admin/shared/side_nav' %>

    <div class="p-4 w-100 mb-4 overflow-scroll">
      <div class="d-flex flex-row justify-content-between align-items-center mx-2">
        <h3>Member level list</h3>
        <%= link_to 'Add new level', new_member_level_path, class: 'btn btn-primary' %>
      </div>
      <div class="w-100 border-bottom my-2"></div>

      <% if @member_levels.present? %>
        <% @member_levels.each_with_index do |member_level, index| %>
          <%= render partial: 'member_level_card', locals: {member_level: member_level, index: index} %>
        <% end %>

        <div class="d-flex justify-content-end">
          <%= paginate @member_levels, views_prefix: 'admin' %>
        </div>
      <% else %>
        <%= render partial: 'admin/shared/empty_list' %>
      <% end %>
    </div>
  </div>
</div>

