<div class="card border m-1" style="min-width: 250px; min-height: 250px">
  <%= image_tag banner.preview.url, class: 'card-img-top', style: 'object-fit: cover; max-height: 100px' if banner.preview.present? %>
  <div class="card-body w-100 d-flex flex-row justify-content-between">
    <div class="d-flex flex-column">
      <span>Online at: <%= banner.online_at %></span>
      <span>Offline at: <%= banner.offline_at %></span>
      <span>Status: <%= banner.status.humanize %></span>
    </div>

    <div class="d-flex h-100 flex-row">
      <%= link_to 'Edit', edit_banner_path(banner), class: 'btn btn-sm btn-primary me-2' %>
      <%= button_to 'Delete', banner_path(banner), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
    </div>
  </div>
</div>