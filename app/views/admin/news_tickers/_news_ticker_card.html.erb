<div class="card w-100 mb-2">
  <div class="card-body w-100 d-flex flex-row justify-content-between">
    <div class="d-flex flex-column">
      <span>Admin owner: <%= news_ticker.admin.email %></span>
      <span>Content: <%= news_ticker.content %></span>
      <span>Status: <%= news_ticker.status.humanize %></span>
    </div>

    <div class="d-flex h-100 flex-row">
      <%= link_to 'Edit', edit_news_ticker_path(news_ticker), class: 'btn btn-sm btn-primary me-2' %>
      <%= button_to 'Delete', news_ticker_path(news_ticker), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
    </div>
  </div>
</div>