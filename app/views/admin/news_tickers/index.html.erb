<div class="vh-100 vw-100">
  <%= render partial: 'admin/shared/top_nav' %>

  <div class="d-flex flex-row h-100 w-100">
    <%= render partial: 'admin/shared/side_nav' %>

    <div class="p-4 w-100 mb-4 overflow-scroll">
      <div class="d-flex flex-row justify-content-between align-items-center mx-2">
        <h3>NewsTicker list</h3>
        <%= link_to 'Add new item', new_news_ticker_path, class: 'btn btn-primary' %>
      </div>
      <div class="w-100 border-bottom my-2"></div>

      <% if @news_tickers.present? %>
        <% @news_tickers.each_with_index do |news_ticker, index| %>
          <%= render partial: 'news_ticker_card', locals: {news_ticker: news_ticker, index: index} %>
        <% end %>

        <div class="d-flex justify-content-end">
          <%= paginate @news_tickers, views_prefix: 'admin' %>
        </div>
      <% else %>
        <%= render partial: 'admin/shared/empty_list' %>
      <% end %>
    </div>
  </div>
</div>

