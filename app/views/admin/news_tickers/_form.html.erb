<%= form_with model: news_ticker, url: url, method: method, data: { controller: '', turbo: 'false' }, class: 'form mt-2' do |f| %>

  <% if news_ticker.errors.any? %>
    <ul>
      <% news_ticker.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-group w-100 mb-2">
    <%= f.label :content, class: 'form-label' %>
    <%= f.text_field :content, class: 'form-control', placeholder: 'Set content' %>
  </div>

  <div class="input-group w-100 mb-2">
    <%= f.label :type, class: 'input-group-text '%>
    <div class="form-control">
      <%= f.radio_button :status, :inactive, class: 'form-check-input' %>
      <%= f.label :inactive, class: 'form-check-label me-2' %>
      <%= f.radio_button :status, :active, class: 'form-check-input' %>
      <%= f.label :active, class: 'form-check-label' %>
    </div>
  </div>

  <%= f.submit 'Save', class: 'btn btn-success w-100' %>
<% end %>