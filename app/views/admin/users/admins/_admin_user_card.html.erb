<a class="form-control border nav-link mb-2 p-2 w-100" data-bs-toggle="collapse" href="#admin_detail_<%= index + 1 %>" role="button" aria-expanded="false" aria-controls="collapseExample">
  <%= index + 1 %>. <%= admin.email %>
</a>

<div class="collapse mb-2" id="admin_detail_<%= index + 1 %>">
  <div class="card card-body flex-row justify-content-between pe-4">
    <div class="d-flex flex-column">
      <small>Promoter: <%= admin.parent.present? ? admin.parent.email : "None" %></small>
      <small>Phone Number: <%= admin.phone.present? ? admin.phone : "None" %></small>
      <small>Total Deposit: <%= admin.total_deposit %></small>
    </div>

    <div class="d-flex flex-column">
      <small>Children Members: <%= admin.children_members.present? ? admin.children_members : "None" %></small>
      <small>Member Total Deposits: <%= admin.children.present? ? admin.children_total_deposit : "None" %></small>
    </div>

    <div class="d-flex flex-column">
      <small>Coins: <%= admin.coins %></small>
      <small>Total Used Coins: Not yet supported</small>
    </div>
  </div>
</div>