<%= form_with model: @order, url: url, method: method, data: { controller: 'select2', turbo: 'false' }, class: 'form mt-2' do |f| %>

  <% if @order.errors.any? %>
    <ul>
      <% @order.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-group w-100 mb-2">
    <%= f.label :coin, class: 'form-label' %>
    <%= f.text_field :coin, class: 'form-control', placeholder: 'Set coins' %>
  </div>

  <div class="form-group w-100 mb-2">
    <%= f.label :genre, class: 'form-label' %>
    <%= f.text_field :genre, class: 'form-control', placeholder: 'Set genre', disabled: true %>
  </div>

  <% unless action_name == 'new_member_level' %>
    <div class="form-group w-100 mb-2">
      <%= f.label :remarks, class: 'form-label' %>
      <%= f.text_field :remarks, class: 'form-control', placeholder: 'Set remarks' %>
    </div>
  <% end %>

  <%= f.submit 'Submit', class: 'btn btn-success w-100 mt-2' %>
<% end %>