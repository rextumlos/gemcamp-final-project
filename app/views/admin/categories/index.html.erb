<div class="vh-100 vw-100">
  <%= render partial: 'admin/shared/top_nav' %>

  <div class="d-flex flex-row h-100 w-100">
    <%= render partial: 'admin/shared/side_nav' %>

    <div class="p-4 w-100 mb-4 overflow-scroll">
      <div class="d-flex flex-row justify-content-between align-items-center mx-2">
        <h3>Category list</h3>
        <%= link_to 'Add new item', new_category_path, class: 'btn btn-primary' %>
      </div>

      <div class="w-100 border-bottom my-2"></div>

      <% if @categories.present? %>
        <div class="container">
          <div class="d-flex flex-column w-100 justify-content-center align-items-center">
            <% @categories.each do |category| %>
              <div class="form-control w-100 d-flex flex-row justify-content-between align-items-center">
                <span><%= category.name %></span>
                <div class="d-flex flex-row">
                  <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-sm btn-primary me-2' %>
                  <%= button_to 'Delete', category_path(category), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>

      <% else %>
        <%= render partial: 'admin/shared/empty_list' %>
      <% end %>

    </div>
  </div>
</div>

