<%= form_with model: item, url: url, method: method, data: { controller: 'select2', turbo: 'false' }, class: 'form mt-2' do |f| %>

  <% if item.errors.any? %>
    <ul>
      <% item.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-group mb-2">
    <%= f.label :image, class: "form-label" %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group w-100 mb-2">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Item name' %>
  </div>

  <div class="form-group w-100 mb-2">
    <%= f.label :quantity, class: 'form-label' %>
    <%= f.text_field :quantity, class: 'form-control', placeholder: 'Set quantity' %>
  </div>

  <div class="form-group w-100 mb-2">
    <%= f.label :minimum_tickets, class: 'form-label' %>
    <%= f.text_field :minimum_tickets, class: 'form-control', placeholder: 'Set minimum tickets' %>
  </div>

  <div class="form-group w-100 mb-2">
    <%= f.label :online_at %>
    <%= f.date_field :online_at, { value: item[:online_at], class: "form-control w-100" } %>
  </div>

  <div class="form-group w-100 mb-2">
    <%= f.label :start_at %>
    <%= f.date_field :start_at, { value: item[:start_at], class: "form-control w-100" } %>
  </div>

  <div class="form-group w-100 mb-2">
    <%= f.label :offline_at %>
    <%= f.date_field :offline_at, { value: item[:offline_at], class: "form-control w-100" } %>
  </div>

  <div class="input-group w-100 mb-2">
    <%= f.label :set_status, class: 'input-group-text '%>
    <div class="form-control">
      <%= f.radio_button :status, :inactive, class: 'form-check-input' %>
      <%= f.label :inactive, class: 'form-check-label me-2' %>
      <%= f.radio_button :status, :active, class: 'form-check-input' %>
      <%= f.label :active, class: 'form-check-label' %>
    </div>
  </div>

  <% if Category.all.present? %>
    <div class="form-group w-100 mb-2">
      <%= f.label :categories, class: 'form-label' %>
      <%= f.collection_select :category_ids, Category.all, :id, :name, {placeholder: 'Select category', include_blank: false}, class: 'select2 w-100', multiple: 'multiple' %>
    </div>
  <% end %>
  
  <%= f.submit 'Save item', class: 'btn btn-success w-100 mt-2' %>
<% end %>