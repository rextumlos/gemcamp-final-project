<%= form_with model: winning, url: url, method: method, data: { controller: 'location select2', turbo: 'false' }, class: 'form mt-2' do |f| %>

  <% if winning.errors.any? %>
    <ul>
      <% winning.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>

  <span class="fw-semibold fs-5 mb-2">Share the prize to the community!</span>

  <div class="form-group mb-2">
    <%= f.label :picture, class: "form-label" %>
    <%= f.file_field :picture, class: "form-control" %>
  </div>

  <div class="form-group mb-2">
    <%= f.label :comment , class: "form-label"%>
    <%= f.text_field :comment, autofocus: true, placeholder: "Set comment...", class: "form-control"%>
  </div>

  <%= f.submit 'Share', class: 'btn btn-success w-100' %>

<% end %>