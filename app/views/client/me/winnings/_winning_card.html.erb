<div class="card mb-2">
  <div class="card-body d-flex flex-row w-100">
    <div class="d-flex flex-column w-100 h-100 me-4">
      <span>Serial number: <%= winning.ticket.serial_number %></span>
      <span>State: <%= winning.state.humanize %></span>
      <span>Owner: <%= winning.user.email %></span>
      <span>Created at: <%= winning.created_at %></span>
    </div>

    <div class="d-flex flex-column w-100 h-100 me-2">
      <span>Item: <%= winning.item.name %></span>
      <span>Batch count: <%= winning.item_batch_count %></span>
      <span>Address: <%= winning.address.present? ? full_address(winning.address) : 'Not set' %> </span>
    </div>

    <div class="d-flex w-100 h-100 justify-content-end">
      <%= link_to "#{winning.won? ? 'Claim' : 'Claimed'}", claim_prize_winning_history_path(winning), class: "btn btn-primary h-100 #{'disabled' unless winning.won?}" %>
    </div>

  </div>
</div>