<div class="card mb-2">
  <div class="card-body d-flex flex-column">
    <div class="d-flex flex-row">
      <div class="d-flex flex-column h-100 me-4">
        <small>Serial number: <%= lottery.serial_number %></small>
        <small>State: <%= lottery.state.humanize %></small>
        <small>Owner: <%= lottery.user.email %></small>
        <small>Created at: <%= lottery.created_at %></small>
      </div>

      <div class="d-flex flex-column h-100 me-2">
        <small>Item: <%= lottery.item.name %></small>
        <small>Batch count: <%= lottery.batch_count %></small>
      </div>
    </div>
  </div>
</div>